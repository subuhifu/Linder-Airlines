@page
@model LindnerAirlines.Pages.Assists.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="bgim">
    <h1>Create an Assistant</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Assist.RequestDescription" class="control-label"></label>
                    <input asp-for="Assist.RequestDescription" class="form-control" />
                    <span asp-validation-for="Assist.RequestDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assist.AssistType" class="control-label"></label>
                    <input asp-for="Assist.AssistType" class="form-control" />
                    <span asp-validation-for="Assist.AssistType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Assist.UserId" class="control-label"></label>
                    <select asp-for="Assist.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn  btn-sm btn-warning" asp-page="Index">Back to List</a>
    </div>

    <br />
    <br />
    <br />
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
